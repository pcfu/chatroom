<% provide(:title, 'Login') %>

<div class="login page-center">
  <%= form_with(url: login_path, local: true) do |form| %>
    <div class="form-header text-center">Welcome back!</div>

    <div class="form-group">
      <%= form.label :username %>
      <%= form.text_field :username, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :password %>
      <%= form.password_field :password, class: "form-control" %>
    </div>

    <%= form.submit "login", class: "btn btn-app-primary" %>
    <small class="form-text">
      <a href=<%= register_path %>>Don't have an account?</a>
    </small>
  <% end %>
</div>
