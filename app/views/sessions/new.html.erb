<% provide(:title, 'Login') %>

<% content_for :assets do %>
  <%= javascript_pack_tag 'static_pages/login', 'data-turbolinks-track': 'reload' %>
<% end %>

<div class="form-wrapper page-center">
  <%= form_with(url: login_path, scope: :session) do |form| %>
    <div class="form-header text-center">Welcome back</div>

    <div class="form-group">
      <%= form.label :username %>
      <%= form.text_field :username, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :password %>
      <%= form.password_field :password, class: "form-control" %>
      <small class="form-text">
        <a href="#">Forgot password?</a>
      </small>
    </div>

    <%= form.submit "login", class: "btn btn-app-primary" %>
    <small class="form-text">
      New to Chatroom?
      <a class="pl-2" href=<%= register_path %>>Register now!</a>
    </small>
  <% end %>
</div>
