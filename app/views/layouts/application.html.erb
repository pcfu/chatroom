<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% unless params[:controller] == 'chat' %>
      <%= render 'layouts/bars/navbar' %>
      <%= render 'layouts/partials/main_content' %>
    <% else %>
      <%= render 'layouts/bars/topbar' %>
      <div class="container-fluid p-0 flex-grow-1 d-flex justify-content-between position-relative">
        <%= render 'layouts/bars/channels_bar' %>
        <%= render 'layouts/partials/chat_content' %>
        <%= render 'layouts/bars/members_bar' %>
      </div>
    <% end %>
  </body>
</html>
